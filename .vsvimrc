set ignorecase
set smartcase
set incsearch

" Tabs & Spaces
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set autoindent

" Long line handling
set wrap
set textwidth=79

set scrolloff=3
set visualbell
set cursorline
set backspace=indent,eol,start

set clipboard=unnamed

let mapleader=","

" Searching
nnoremap / /\v
vnoremap / /\v

" Windows
nnoremap <leader>w <C-w>v<C-w>l
nnoremap <leader>wm <C-w>_<C-w>|

" Movement
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap j gj
nnoremap k gk

nnoremap <space> :

nnoremap <leader>c :vsc ReSharper.ReSharper_LineComment<cr>
vnoremap <leader>c :vsc ReSharper.ReSharper_BlockComment<cr>

nnoremap <leader>f :vsc Edit.FormatDocument<cr>
vnoremap <leader>f :vsc Edit.FormatDocument<cr>

nnoremap <leader>r :vsc ReSharper.ReSharper_RefactorThis<cr>

